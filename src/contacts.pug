mixin scripts(scripts)
	each src in scripts
		- src = 'js/' + src;
		script(src=src)
			
doctype html
html(lang="ru")
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=1180")
		title Типография онлайн "Online print"
		//css
		link(rel="stylesheet" href="css/style.min.css")

		//fonts
		link(href="https://fonts.googleapis.com/css?family=Ubuntu:400,700&amp;subset=cyrillic" rel="stylesheet")
	body
		.page
			//header
			include blocks/header

			//content
			.wrap.content
				include blocks/sidebar.pug

				section.section
					h1.titleficha Контакты типографии ОнлайнПринт
					.section-text
						p Офис и пункт выдачи: г. Нижний Новгород, Гагарина проспект, 178, м. Горьковская, Режим работы: 10.00 - 21.00. Без выходных. <br><br>г. Нижний Новгород, Гагарина проспект, 178, м. Горьковская, Режим работы: 10.00 - 21.00. Без выходных.
					<script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A905b9aff53977bae52694e346cb1892e17a224d5664e6b347c1e07f804ce0821&amp;width=820&amp;height=720&amp;lang=ru_RU&amp;scroll=true"></script>
					// Обратная связь
					.section-feedback
						h1 Не нашли что искали? Свяжитесь с нами!
						.section-feedback__btn.btn
							a(href="#open-modal") Позвонить нам
			// footer
			include blocks/footer.pug

		//scripts
		+scripts(['jquery-3.2.1.min.js', 'slick.min.js', 'main.js'])
